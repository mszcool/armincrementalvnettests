{
    "type": "Microsoft.Blueprint/blueprints",
    "name": "landingzone-baseline-blueprint",
    "properties": {
        "description": "A sample blueprint to deploy components for a Networking Landing Zone into a target subscription",
        "targetScope": "subscription",
        "parameters": {
            "Blueprint_baseLocation": {
                "type": "string",
                "allowedValues": [
                    "westeurope",
                    "northeurope",
                    "westus2",
                    "eastus2",
                    "southeastasia",
                    "australiaeast"
                ]
            },
            "Blueprint_isNewDeployment": {
                "type": "bool",
                "metadata": {
                    "displayName": "New deployment or Upgrade?",
                    "description": "Specifies if the assignment happens on a newly deployed landing zone or on a landing zone that needs to be upgraded."
                }
            }
        }
    }
}